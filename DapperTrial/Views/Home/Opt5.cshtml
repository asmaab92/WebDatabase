@{
}

@Model List<City>
    @{
        ViewData["Title"] = "Asian cities Page";
    }

    <div class="text-center">
        <h1 class="display-4">This page presents the Asian cities with Life expectancy above 55</h1>
    </div>

    <table>
        <tr>
            <td>City Name</td>
            <td>Continent</td>
            <td>Life Expectancy</td>
        </tr>
        @foreach (City city in @Model)
        {
            <tr>
                <td>@city.Name</td>
                <td>@city.Continent</td>
                <td>@city.LifeExpectancy</td>
            </tr>
        }

    </table>
